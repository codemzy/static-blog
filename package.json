{
    "name": "react-static",
    "version": "1.0.0",
    "description": "A simple react static website builder.",
    "author": "codemzy",
    "license": "UNLICENSED",
    "scripts": {
        "dev": "NODE_ENV=development node server/server.js",
        "dev-css": "postcss css/*.css --dir dist/css --ext .min.css",
        "build": "npm run build-static && npm run build-css && npm run build-js",
        "build-css": "postcss css/*.css --dir dist/css --ext .min.css --env production",
        "build-js": "uglifyjs website/js/index.js --compress --mangle --comments '/^!/' --output dist/js/index.min.js",
        "build-static": "node website/build.js"
    },
    "dependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-router-dom": "^5.2.0",
        "validator": "^13.5.2"
    },
    "devDependencies": {
        "@babel/core": "^7.12.13",
        "@babel/preset-env": "^7.12.13",
        "@babel/preset-react": "^7.12.13",
        "@babel/register": "^7.13.8",
        "autoprefixer": "^10.2.4",
        "babel-loader": "^8.2.2",
        "cssnano": "^5.0.6",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "postcss": "^8.2.6",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.0",
        "tailwindcss": "^2.0.2",
        "uglify-js": "^3.13.5"
    }
}
